{% extends '::front/base_front.html.twig' %}
 {% block header %}
  {% include '::front/header_simple.html.twig' %} 
  {% endblock %}
{% block container %}
     <section>
		<div class="container">

      <div >
          <h1 class="text-center">Cambio de Contrase単a</h1>
      </div>
      
      <div class="col-md-6 col-xs-12" >
          {% include '::messages.html.twig' %}
          
          <p>Ingrese una nueva contrase単a. </p>
          <form class="form col-md-12 center-block" action='' method="POST" name="formChange" id="formChange">
            <div class="form-group  col-xs-12">
              <label class="control-label col-xs-2">Contrase単a</label>
              <div class="col-xs-10">
                <input type="password" id="password" placeholder="" name="password" value="" class="form-control">
                <span id='formChange_password_errorloc' class="help-block">  </span>
              </div>
            </div>
            <div class="form-group  col-xs-12">
              <label class="control-label col-xs-2">Repetir Contrase単a</label>
              <div class="col-xs-10">
                <input type="password" id="confirm" placeholder="" name="confirm" value="" class="form-control">
                <span id='formChange_confirm_errorloc' class="help-block">  </span>
              </div>
            </div>
            
            <div class="form-group">
              <input type="hidden" name="codigo" id="codigo" value="{{ codigo }}" />
              <button class="btn btn-primary btn-lg btn-block" id="btn_change" data-url="{{ path('change_pass') }}" >Enviar</button>
              
            </div>
          </form>
      </div>

    </div>
    </section>

{% endblock %}
{% block javascripts %}
  {{ parent() }}
 {% javascripts '@FrontendHomeBundle/Resources/public/js/change_pass.js'filter='?uglifyjs2' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}

{% endblock %}