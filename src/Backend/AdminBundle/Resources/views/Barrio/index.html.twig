{% extends '::backend.html.twig' %}

{% block container %}
 
 
 <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Listado de Barrios
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="{{ path("principal") }}">Principal</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-globe"></i> Listado de Barrios
                            </li>
                        </ol>
                    </div>
                </div> <!-- row -->

                 <div class="row">
                    <div class="col-lg-3">
                        <button type="button" class="btn btn-primary" id="new_button" data-url="{{ path('barrio_new') }}">Nuevo</button>
                     </div>
                     <div class="col-lg-4">
                          <form id="custom-search-form" class="form-search form-horizontal pull-right" action="#">
                            
                            <div class="form-group input-group">
                                <input type="text" class="form-control search-query" id="search-query" placeholder="Buscar" value="{{ search }}">
                                <span class="input-group-btn"><button class="btn btn-default" id="search-button" data-url="{{ path('barrio') }}" type="button"><i class="fa fa-search"></i></button></span>
                            </div>
                           
                          </form>
                     </div>
                     <div class="col-lg-3">
                     {% if is_granted("ROLE_VIEWBARRIO") %} <button class="btn btn-primary" type="button" id="exportar_button" data-url="{{ path('barrio_exportar') }}" >Exportar </button> {% endif %}
                     </div> 
                 </div>
                    

                 <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Zona</th>
                                       
                                        <th {% if pagination.isSorted('u.name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Nombre', 'u.name') }}</th>
                                        <th style="width: 36px;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                     {% for barrio in pagination %}
                                       <tr>
                                                  <td>{{ barrio.zona |capitalize}}</td>
                                                  
                                                  <td>{{ barrio.name |capitalize}}</td>
                                                  <td>
                                                  {% if is_granted("ROLE_MODBARRIO") %}
                                                  <a href="{{ path('barrio_edit', { 'id': barrio.id }) }}"><i class="fa fa-pencil"></i></a>
                                                  {% endif %}
                                                  {% if is_granted("ROLE_DELBARRIO") %}
                                                  <a href="#" class="btn confirm-delete"   data-toggle="modal" data-id={{ barrio.id }}  data-target="#myModal"><i class="fa fa-trash"></i></a>
                                                  {% endif %}
                                                  </td>
                                      </tr>
                                      
                                      {% endfor %}
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                 </div>   
                <!-- /.row -->

                <div class="pagination">
                       {{ knp_pagination_render(pagination) }}
    
               </div>



    
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 class="modal-title" id="myModalLabel">Confirmar Borrado</h4>
            </div>
            <div class="modal-body">
                <p class="error-text">Esta seguro que desea borrar el barrio?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" data-id="0"  data-url="{{ path('barrio_delete', { 'id': 'id' }) }}">Borrar</button>
        </div>
    </div>
  </div>
</div>
    
    
    
    
    
    
    <form action="" id="delete-form" method="post" {{ form_enctype(delete_form) }}>
    {{ form_widget(delete_form) }}
    <input type="hidden" value="DELETE" name="_method">
    
    </form>
 
 
 
    
    
    {% endblock %}
  {% block javascripts %}
  {{ parent() }}
 
{% javascripts '@BackendAdminBundle/Resources/public/js/search_index.js' filter='?uglifyjs2' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% javascripts '@BackendAdminBundle/Resources/public/js/exportar_entidad.js' filter='?uglifyjs2'%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}      
  
{% endblock %}


