{% extends '::loginBase.html.twig' %}

{% block container %}

<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <h1 class="text-center">Zona Delivery - Administrador</h1>
      </div>
      <div class="modal-body">
          {% include '::messages.html.twig' %}
          <p>Ingrese una nueva contraseña. </p>
          <form class="form col-md-12 center-block" action='' method="POST" name="formChange" id="formChange">
            <div class="form-group  col-xs-12">
              <label class="control-label col-xs-2">Contraseña</label>
              <div class="col-xs-10">
                <input type="password" id="password" placeholder="" name="password" value="" class="form-control">
                <span id='formChange_password_errorloc' class="help-block">  </span>
              </div>
            </div>
            <div class="form-group  col-xs-12">
              <label class="control-label col-xs-2">Repetir Contraseña</label>
              <div class="col-xs-10">
                <input type="password" id="confirm" placeholder="" name="confirm" value="" class="form-control">
                <span id='formChange_confirm_errorloc' class="help-block">  </span>
              </div>
            </div>
            
            <div class="form-group">
              <input type="hidden" name="codigo" id="codigo" value="{{ codigo }}" />
              <button class="btn btn-primary btn-lg btn-block" id="btn_change" data-url="{{ path('change_pass') }}" >Enviar</button>
              <span class="pull-right"><a href="{{ path('login') }}">Login</a></span>
            </div>
          </form>
      </div>
      <div class="modal-footer">
      </div>
  </div>
  </div>
</div>


{% endblock %}
{% block javascripts %}
  {{ parent() }}
 {% javascripts '@BackendUserBundle/Resources/public/js/change_pass.js' filter='?uglifyjs2' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}

{% endblock %}
