{% extends '::backend.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
     {% stylesheets '@BackendUserBundle/Resources/public/css/group.css' %}
     <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
    

{% endblock %}
{% form_theme form 'BackendUserBundle:Group:checkboxlist.html.twig' %}



{% block container -%}
    <h3>Nuevo Grupo</h3>
    
   
    <div class="well">
    <div id="myTabContent" class="tab-content">
    <div class="tab-pane active in" id="home">
    <form class="form-horizontal" id="tab" name="tab" method="post" novalidate="true"    action="{{ path('group_create') }}" >
     {{ form_errors(form) }}
   

    
    {% include 'BackendUserBundle:Group:_group.html.twig' %} 

    
    {{ form_rest(form) }}

    <div class="form-group">
    <!-- Button -->
    <div class="text-center">
    <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i>Crear</button>
    <button type="button" class="btn btn-inverse" data-url="{{ path('group') }}"><i class="fa fa-chevron-left"></i> Back</button>
    </div>
    </div>
    
    
    </form>
    </div>
    
    </div>
    </div>
    
    

       
{% endblock %}
{% block javascripts %}
  {{ parent() }}
 
{% javascripts '@BackendUserBundle/Resources/public/js/validate_group.js' filter='?uglifyjs2' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}







