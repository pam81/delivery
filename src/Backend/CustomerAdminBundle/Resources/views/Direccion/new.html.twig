{% extends '::customer/backend.html.twig' %}

 {% block navigation %}
          {% if type == 1 %}
              {{ parent() }}
          {% endif %}
  {% endblock %}
 
{% block topmenu %}
    {% if type == 1 %}
              {{ parent() }}
          {% endif %}
    
 {% endblock %}

 {% block sidemenu %}
      {% if type == 1 %}
              {{ parent() }}
          {% endif %}
    
 {% endblock %}
{% block container -%}
    <h3>Nueva Direccion</h3>
    
   
    <div class="well">
    <div id="myTabContent" class="tab-content">
    <div class="tab-pane active in" id="home">
    <form class="form-horizontal" id="tab" name="tab" method="post" novalidate="true" action="{{ path('direccion_create',{'type':type}) }}" >
     {{ form_errors(form) }}
    
    {% include 'BackendCustomerAdminBundle:Direccion:_direccion.html.twig' %} 

    
    {{ form_rest(form) }}

    <div class="form-group">
    <!-- Button -->
    <div class="text-center">
    <button type="button" class="btn btn-primary" id="addBtnDireccion"><i class="fa fa-plus"></i>Crear</button>
    <button type="button" class="btn btn-inverse" data-url="{{ path('direccion') }}"><i class="fa fa-chevron-left"></i> Volver</button>
    
    </div>
    
    </div>
    </form>
    </div>
    
     </div>
      </div>
    

       
{% endblock %}
{% block javascripts %}
  {{ parent() }}
 <script type="text/javascript" src="//maps.google.com/maps/api/js?sensor=true"></script>
 <script src="{{ asset("js/front/gmaps.js") }}"></script>
{% javascripts '@FrontendHomeBundle/Resources/public/js/utils.js'  filter='?uglifyjs2' %}
          <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% javascripts '@BackendCustomerAdminBundle/Resources/public/js/validate_direccion.js' filter='?uglifyjs2' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% if addSucursal %}
  <script  type="text/javascript">
  $(document).ready( function(){
      window.parent.loadDireccion({{ direccionId }});
      window.parent.Shadowbox.close();
   });   
  </script>
{% endif %}
{% endblock %}
