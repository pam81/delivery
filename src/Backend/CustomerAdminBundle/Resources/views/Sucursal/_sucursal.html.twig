    <h3>Horarios de Atención </h3>
    <div id="hourForm" class="container">

    {% for d in dias %}

    <div  data-name="{{ d.getName() }}" data-id="{{ d.getId() }}" class="day col-md-12" style="margin-bottom: 10px;">
       <div id="label">{{ d.getName() }}: </div>
       
       <span  id="hora{{ d.getId()}}" {% if horarios is defined and (horarios[d.getId()]['closed'] == 1 or horarios[d.getId()]['abierto'] == 1)  %}   style="display:none;" {% endif %} >
       <select name="fromH[{{ d.getId()}}]" class="hour from" style="width: 60px">
       {% for  h in 0..23 %}
         {% set selected='' %}
          {% if horarios is defined and horarios[d.getId()]['fromH'] == h%}
            {% set selected='selected'%}
          {% endif %}
        <option value="{{ h }}" {{ selected }}> {{ h }}</option>
        {% endfor %}
       </select>
       <select name="fromM[{{ d.getId()}}]" class="min from" style="width: 60px">
       {% for  h in [':00', ':15', ':30', ':45'] %}
        
        {% set selected='' %}
          {% if horarios is defined and horarios[d.getId()]['fromM'] == h%}
            {% set selected='selected'%}
          {% endif %}
        <option value="{{ h }}" {{ selected }}> {{ h }}</option>
        {% endfor %}
       </select>
      
       a

       <select name="toH[{{ d.getId()}}]" class="hour to" style="width: 60px">
       {% for  h in 0..23 %}
       {% set selected='' %}
          {% if horarios is defined and horarios[d.getId()]['toH'] == h%}
            {% set selected='selected'%}
          {% endif %}
        <option value="{{ h }}" {{ selected }}> {{ h }}</option>
        {% endfor %}
       </select>
       <select name="toM[{{ d.getId()}}]" class="min to" style="width: 60px">
       {% for  h in [':00', ':15', ':30', ':45']  %}
       {% set selected='' %}
          {% if horarios is defined and horarios[d.getId()]['toM'] == h%}
            {% set selected='selected'%}
          {% endif %}
        <option value="{{ h }}" {{ selected }}> {{ h }}</option>
        {% endfor %}
       </select>
       </span>
        <span  {% if (horarios is defined and horarios[d.getId()]['partido'] != 1) or horarios is not defined %} style="display:none;" {% endif %} id="horapartido{{ d.getId()}}">
        --

        <select name="fromHT[{{ d.getId()}}]" class="hour from" style="width: 60px; ">
            {% for  h in 0..23 %}
                {% set selected='' %}
                {% if horarios is defined and horarios[d.getId()]['fromHT'] == h%}
                    {% set selected='selected'%}
                {% endif %}
                <option value="{{ h }}" {{ selected }}> {{ h }}</option>
            {% endfor %}
        </select>
        <select name="fromMT[{{ d.getId()}}]" class="min from" style="width: 60px">
            {% for  h in [':00', ':15', ':30', ':45'] %}

                {% set selected='' %}
                {% if horarios is defined and horarios[d.getId()]['fromMT'] == h%}
                    {% set selected='selected'%}
                {% endif %}
                <option value="{{ h }}" {{ selected }}> {{ h }}</option>
            {% endfor %}
        </select>

        a

        <select name="toHT[{{ d.getId()}}]" class="hour to" style="width: 60px; ">
            {% for  h in 0..23 %}
                {% set selected='' %}
                {% if horarios is defined and horarios[d.getId()]['toHT'] == h%}
                    {% set selected='selected'%}
                {% endif %}
                <option value="{{ h }}" {{ selected }}> {{ h }}</option>
            {% endfor %}
        </select>
        <select name="toMT[{{ d.getId()}}]" class="min to" style="width: 60px">
            {% for  h in [':00', ':15', ':30', ':45']  %}
                {% set selected='' %}
                {% if horarios is defined and horarios[d.getId()]['toMT'] == h%}
                    {% set selected='selected'%}
                {% endif %}
                <option value="{{ h }}" {{ selected }}> {{ h }}</option>
            {% endfor %}
        </select>
        </span>

               {% set checked='' %}
                  {% if horarios is defined and horarios[d.getId()]['closed'] == 1%}
                    {% set checked='checked'%}
               {% endif %}
               <label id="closed{{d.getId()}}" {% if horarios is defined and ( horarios[d.getId()]['abierto'] == 1 or horarios[d.getId()]['partido'] == 1) %} style="display: none;" {% endif %}  ><input type="checkbox" data-id="{{d.getId()}}" {{ checked}} name="closed[{{d.getId()}}]" value="1"  class="closed"><span>Cerrado</span></label>
               {% set checkedAbierto='' %}
                  {% if horarios is defined and horarios[d.getId()]['abierto'] == 1%}
                    {% set checkedAbierto='checked'%}
               {% endif %}
               <label id="abierto{{d.getId()}}" {% if horarios is defined and ( horarios[d.getId()]['closed'] == 1 or horarios[d.getId()]['partido'] == 1) %} style="display: none;" {% endif %}><input type="checkbox" data-id="{{d.getId()}}" {{ checkedAbierto}} name="abierto[{{d.getId()}}]" value="1"  class="abierto"><span>Abierto 24hs</span></label>
               {% set checkedPartido='' %}
                  {% if horarios is defined and horarios[d.getId()]['partido'] == 1%}
                    {% set checkedPartido='checked'%}
               {% endif %}
              <label id="partido{{d.getId()}}" {% if horarios is defined and ( horarios[d.getId()]['abierto'] == 1 or horarios[d.getId()]['closed'] == 1) %} style="display: none;" {% endif %}> <input type="checkbox" data-id="{{d.getId()}}" {{ checkedPartido}}  name="partido[{{d.getId()}}]" value="1"  class="partido"><span>Horario Partido</span></label>
               
        </div>
        {% endfor %}
    

    </div>
    

